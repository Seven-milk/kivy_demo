<MyGrid>:

	base_time: base_time
	date: date

	GridLayout:
		cols:1
		size: root.width - 200, root.height - 200
		pos: 100, 100

		GridLayout:
			cols:1

			Label:
				text: "base_time,example:2020 6 12"

			TextInput:
				id: base_time

		Button:
		    id: date
			text:"Baby, do u want to know your next special time?"
            on_press: root.btn_cal()

        Button:
			text:"Modify the base_time"
            on_press: root.btn_modify()



<P>:
	Label:
		text: "baby, your special day is"
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":1}

	Label:
	    text: str(root.date)
	    size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":0.8}

	Label:
		text: "base_time is"
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":0.5}

	Label:
	    text: str(root.base_time)
	    size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":0.3}

